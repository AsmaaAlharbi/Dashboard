@model IEnumerable<ProductDetails>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product Details Page";

}
<section class="vh-100" style="background-color: rgba(223, 217, 217, 0.75);">
    <div class="container h-100">
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col">
                        <p><span class="h2">Shopping Cart </span><span class="h4">(item in your cart)</span></p>

                        <div class="card mb-4">
                            <div class="card-body p-4">

                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <img src="~/images/@item.Image"
                                             class="img-fluid" alt="Generic placeholder image">
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Name</p>
                                            <p class="lead fw-normal mb-0">@item.ProductName</p>
                                        </div>
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Color</p>
                                            <p class="lead fw-normal mb-0">
                                                @item.Color
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Price</p>
                                            <p class="lead fw-normal mb-0">@item.Price SAR</p>
                                        </div>
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Total</p>
                                            <p class="lead fw-normal mb-0">@item.Price SAR</p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="card mb-5">
                            <div class="card-body p-4">

                                <div class="float-end">
                                    <p class="mb-0 me-5 d-flex align-items-center">
                                        <span class="small text-muted me-2">Order total:</span> <span class="lead fw-normal">@item.Price SAR</span>
                                    </p>
                                </div>

                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="ConShopping" class="btn btn-light btn-lg me-2">Continue shopping</a>
                            <a asp-action="Checkout" asp-route-id="@item.Id" class="btn btn-primary btn-lg">Add to cart</a>
                        </div>

                    </div>
                </div>
            }
        }

    </div>
</section>
